{
    "recipe": {
        "recipe_name": "Roasted Tomato and Onion Soup (Vegan)",
        "skill_level": "Advanced",
        "time": "90 minutes",
        "dietary_restrictions": "vegan",
        "ingredients": [
            {
                "name": "Tomatoes",
                "amount": "2 lbs",
                "unit": "lbs"
            },
            {
                "name": "Yellow Onion",
                "amount": "2",
                "unit": "medium"
            },
            {
                "name": "Vegetable Broth",
                "amount": "6 cups",
                "unit": "cups"
            },
            {
                "name": "Olive Oil",
                "amount": "2 tbsp",
                "unit": "tbsp"
            },
            {
                "name": "Garlic",
                "amount": "4 cloves",
                "unit": "cloves"
            },
            {
                "name": "Fresh Thyme",
                "amount": "2 sprigs",
                "unit": "sprigs"
            },
            {
                "name": "Salt",
                "amount": "1 tsp",
                "unit": "tsp"
            },
            {
                "name": "Black Pepper",
                "amount": "1/2 tsp",
                "unit": "tsp"
            },
            {
                "name": "Maple syrup",
                "amount": "1 tbsp",
                "unit": "tbsp"
            }
        ],
        "steps": [
            {
                "step": 1,
                "instruction": "Preheat oven to 400\u00b0F (200\u00b0C)."
            },
            {
                "step": 2,
                "instruction": "Cut the tomatoes and onions into quarters. Peel and roughly chop the garlic."
            },
            {
                "step": 3,
                "instruction": "Toss the tomatoes, onions, garlic, olive oil, thyme, salt, pepper and maple syrup on a baking sheet."
            },
            {
                "step": 4,
                "instruction": "Roast for 45-60 minutes, or until the vegetables are softened and slightly caramelized."
            },
            {
                "step": 5,
                "instruction": "Remove the thyme sprigs. Transfer the roasted vegetables to a large pot or blender."
            },
            {
                "step": 6,
                "instruction": "Add the vegetable broth. If using a pot, bring the mixture to a simmer and cook for 15 minutes. If using a blender, carefully blend until smooth."
            },
            {
                "step": 7,
                "instruction": "Season with additional salt and pepper to taste. Serve hot."
            }
        ],
        "prep_time": "20 minutes",
        "cook_time": "70 minutes",
        "servings": "4-6",
        "tips": [
            "For a smoky flavor, roast the vegetables under the broiler for the last few minutes."
        ],
        "substitutions": [
